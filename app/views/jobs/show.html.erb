<div class="container">
  <div class="row job-bc-1">
    <div class="col-sm-2 job-bc-1-img">
      <% if @job.cp_image.present? %>
      <%= image_tag(@job.cp_image.medium.url, class: "img-responsive") %>
    <% else %>
      <%= image_tag("http://holdplace.it/200x200&text=No Pic", class: "img-responsive") %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <div class="row job-bc-1-1">
        <div class="col-sm-7">
          <%= link_to @job.cp_website, :target => "_blank" do %>
          <h1><%= @job.cp_name %>
            <i class="fa fa-link" aria-hidden="true"></i>
            <% end %>
            <span class="label label-success">
              <i></i>小伙伴认证</span>
          </h1>
          <p><%= @job.cp_subtitle %></p>
        </div>
        <div class="col-sm-5 text-center">
          <div class="job-btn">
            <%= link_to '#', class: "btn btn-success btn-lg job-btn-1" do %>
            <span class='fa fa-star-o'></span>

            收藏
            <% end %>
            <%= link_to("投个简历", apply_join_job_path(@job), class: "btn btn-success btn-lg job-btn-2") %>
          </div>
        </div>
      </div>
      <div class="row job-bc-1-2">
        <div class="col-sm-7">
          <p><%= @job.department %></p>
          <h1><%= @job.title %>
            -
            <%= @job.cp_city %></h1>
          <h3>
            <span><%= @job.wage_lower_bound %>-<%= @job.wage_upper_bound %></span>/<%= @job.cp_city %>/
            <% if @job.is_fulltime %>
            全职
          <% else %>
            非全职
            <% end %>
          </span>
          <i class="job-updatetime">发布于
            <%= @job.updated_at.strftime("%Y-%m-%d") %></i>
        </h3>
      </div>
      <div class="col-sm-4 col-sm-offset-1 job-label-item">
        <% @job.jb_labels.limit(6).each do |jb_label| %>
        <div class="job-label-item-1 label label-success"><%= jb_label.label_item %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row job-bc-bottom">
  <div class="col-sm-8">

    <div class="row job-bc-2">
      <% if @job.cp_products.present? %>
      <div class="col-sm-12 job-bc-2-2">
        <div class="item-title">
          公司产品
        </div>
        <div class="product-item">
          <% @job.cp_products.limit(3).each do |cp_product| %>
          <div class="col-sm-5 col-xs-12">
            <%= image_tag(cp_product.product_image.medium.url, class: "img-responsive") %>
          </div>
          <div class="col-sm-7 col-xs-12">
            <%= link_to cp_product.product_link do  %>
            <h3><%= cp_product.title %>
              <i class="fa fa-link" aria-hidden="true"></h3>
              <% end %>
              <div class="product-label">
                <% @product_labels.each do |product_label| %>
                <div class="product-label-item">
                  <span class="label label-success"><%= product_label.label_item %></span>
                </div>
                <% end %>
              </div>
              <div class="product-description">
                <%= simple_format(cp_product.description) %>
              </div>
            </div>
            <% end %>
          </div>
        </div>
        <% end %>
        <div class="col-sm-12 job-bc-2-1">
          <div class="item-title">
            公司介绍
          </div>
          <div class="cp_description">
            <div id="div1">
              <%= simple_format(@job.cp_description) %>
              <br>
              <a href="javascript:;">收起</a>
            </div>
          </div>
          <%= render "slider_1" %>
        </div>

      </div>

    </div>

    <div class="col-sm-4">
      <div class="row job-bc-3">
        <div class="col-sm-12 job-bc-3-1">
          <div class="item-title">
            公司基本信息
          </div>
          <div class="item-content">
            <ul>
              <li>
                <i class="type"></i>
                <span><%= @job.cp_type %></span>
              </li>
              <li>
                <i class="stage"></i>
                <span><%= @job.cp_stage %></span>
              </li>
              <li>
                <i class="number"></i>
                <span><%= @job.cp_number %></span>
              </li>
              <li>
                <i class="city"></i>
                <span><%= @job.cp_city %></span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- 以下是展开收起 -->
<script type="text/javascript">
  var oDiv = document.getElementById('div1');
  var oA = oDiv.getElementsByTagName('a');
  var onOff = true;
  var old = '';

  onOff = false;
  old = oDiv.innerHTML;
  oDiv.innerHTML = oDiv.innerHTML.substring(0, 200) + '...<div><a style="background-position: right top; href="javascript:;">展开</a></div>';
  oA[0].onclick = function move() {
    if (onOff) {
      onOff = false;
      old = oDiv.innerHTML;
      oDiv.innerHTML = oDiv.innerHTML.substring(0, 200) + '...<div><a style="background-position: right top;" href="javascript:;">展开</a></div>';
      oA = oDiv.getElementsByTagName('a');
      oA[0].onclick = move;
    } else {
      onOff = true;
      oDiv.innerHTML = old;
      oA = oDiv.getElementsByTagName('a');
      oA[0].onclick = move;
    }
  }
</script>
