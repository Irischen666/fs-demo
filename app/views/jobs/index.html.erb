<div class="container">
  <div class="pull-right">
    <%= link_to("发职位找人才", new_job_path, class: "btn btn-primary") %>
  </div>
  <h1>职位列表，些页面待装修</h1>
  <% @jobs.each do |job| %>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>企业</th>
        <th>企业图</th>
        <th>薪资</th>
        <th>所在城市</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to job.cp_name, job_path(job)  %></td>
        <td>
          <% if job.cp_image.present? %>
          <%= image_tag(job.cp_image.thumb.url, class: "img-responsive") %>
          <% end  %>
        </td>
        <td><%= job.wage_lower_bound %>
          -
          <%= job.wage_upper_bound %></td>
        <td><%= job.cp_city %></td>
      </tr>
    </tbody>
  </table>
  <% end %>

</div>
