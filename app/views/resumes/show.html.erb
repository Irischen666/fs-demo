<% if @resume.user == current_user %>
<%= link_to("修改简历", edit_resume_path(@resume), class: "btn btn-primary pull-right") %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1 class="text-center">
        用户头像预留地
      </h1>
    </div>
    <div class="col-md-6">
      <h1><%= @resume.name %></h1>
      <p><%= @resume.description %></p>
      <p><%= @resume.user_id %></p>
    </div>

  </div>
</div>
<hr>

<div class="container">
  <% if @photos.present? %>
  <% @photos.each_with_index do |p, index| %>
  <% if index == 0 %>
  <%= image_tag p.avatar.medium.url %>
  <div style="letter-spacing: -8px">
  <% else %>
    <%= image_tag p.avatar.medium.url %>
    <% end %>
    <% end %>
  </div>
<% else %>
  <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
  <% end %>
</div>
<hr>
<div class="pull-right">
  <% if !current_user.is_employ_it?(@resume) %>
  <%= link_to("我要挖走TA", employ_it_resume_path(@resume), method: :post, class: "btn btn-primary") %>
<% else %>
  <%= link_to("撤消聘请", cancel_employ_resume_path(@resume), method: :post, class: "btn btn-primary") %>
  <% end %>
</div>
